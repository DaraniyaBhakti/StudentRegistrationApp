<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardBackgroundColor">@color/design_default_color_background</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dividerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="cardTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_15dp</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="cardImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitStart</item>

    </style>

    <style name="cardLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_background_cardView</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_15dp</item>
        <item name="android:paddingTop">@dimen/padding_15dp</item>
        <item name="android:paddingBottom">@dimen/padding_15dp</item>
    </style>

    <style name="textInputLayoutDropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
    </style>

    <style name="checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="markTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_15dp</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="slider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_20dp</item>

    </style>

    <style name="textSectionHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_heading</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="land_textInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="land_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="land_textInputLayoutDropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="land_checkbox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="land_cardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="lan_cardLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_background_cardView</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
</resources>